/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "dht11.h"
#include <stdio.h>
#include <string.h>

/* LCD Pin Definitions */
#define LCD_PORT GPIOB
#define LCD_RS GPIO_PIN_0
#define LCD_EN GPIO_PIN_1
#define LCD_D4 GPIO_PIN_2
#define LCD_D5 GPIO_PIN_3
#define LCD_D6 GPIO_PIN_4
#define LCD_D7 GPIO_PIN_5



